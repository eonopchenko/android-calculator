        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/edtSubRes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
